<h1>Student Records (Sorted by GPA)</h1>
<?php
$host='localhost';$db='student_records';$user='root';$pass='';
try{
  $pdo=new PDO("mysql:host=$host;dbname=$db",$user,$pass);
  $students=$pdo->query("SELECT * FROM students")->fetchAll(PDO::FETCH_ASSOC);
  function selectionSort(&$a){$n=count($a);for($i=0;$i<$n-1;$i++){ $m=$i;for($j=$i+1;$j<$n;$j++)if($a[$j]['gpa']<$a[$m]['gpa'])$m=$j;
    if($m!=$i){$t=$a[$i];$a[$i]=$a[$m];$a[$m]=$t;}}}
  selectionSort($students);
  echo "<table><tr><th>ID</th><th>Name</th><th>GPA</th></tr>";
  foreach($students as $s)echo "<tr><td>{$s['id']}</td><td>{$s['name']}</td><td>{$s['gpa']}</td></tr>";
  echo "</table>";
}catch(PDOException $e){echo "Error: ".$e->getMessage();}
?>
