<div class="counter">
<?php
$file = 'visitor_count.txt';

// Read and update visitor count safely
if (file_exists($file)) {
    $count = (int)file_get_contents($file);
} else {
    $count = 0;
}
$count++;
file_put_contents($file, $count);

echo "<h2>Visitor Count</h2>";
echo "<p>You are visitor number: <strong>$count</strong></p>";
?>
</div>
